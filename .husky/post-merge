#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# retrieves the list of files that have changed 
changed_files="$(git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD)"

scan_lockfile() {
  echo "ğŸ•µï¸ğŸ“¦ Checking package file changes..."
  if [ -n "$changed_files" ]; then
     if [ -n "$(echo "$changed_files" | grep -E 'yarn\.lock|package-lock\.json|pnpm-lock\.yaml|bun\.lockb')" ]; then
      echo "ğŸ”’ Lock files have changed..."
      # Perform  install dependencies action when lock files changed.
      # npm run install
      # yarn install
      pnpm install
      # bun install
      exit 0
      fi
  fi
}
  
if [ -z "$changed_files" ]; then
  echo "ğŸ¤·â€â™‚ï¸ No files changed"
  exit 0
fi

scan_lockfile || (
  echo "âŒ packages changes checks failed!"
  exit 1
)

echo "âœ… No package changes found"